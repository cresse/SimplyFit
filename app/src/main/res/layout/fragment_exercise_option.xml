<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/exercise_option_fragment"
    tools:context="shmurphy.tacoma.uw.edu.simplyfitter.ExerciseOptionFragment">



    <Spinner
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:id="@+id/exercise_spinner"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What type of workout are you logging?"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/type_exercise_textview"
        android:layout_gravity="center_horizontal|top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Exercise"
        android:id="@+id/exercise_option_button"
        android:layout_gravity="right|center_vertical" />
</FrameLayout>
